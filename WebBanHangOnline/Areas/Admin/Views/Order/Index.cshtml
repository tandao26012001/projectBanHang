@model IEnumerable<WebBanHangOnline.Models.EF.Order>

@{
    ViewBag.Title = "Danh sách đơn hàng";
}
<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><a href="">Trang chủ</a> /</span> @ViewBag.Title</h4>

    <!-- Borderless Table -->
    <div class="card">
        <h5 class="card-header">@ViewBag.Title</h5>
        <div class="card-body d-flex justify-content-between align-items-center">
            <!-- Search -->
            @using (Html.BeginForm("Index", "Order", FormMethod.Get, new { @class = "d-flex align-items-center mb-3" }))
            {
                <div class="nav-item d-flex align-items-center">
                    <input type="text"
                           name="searchText"
                           id="searchText"
                           class="form-control border-0 shadow-none"
                           placeholder="Tìm theo tên hoặc mã sản phẩm"
                           value="@ViewBag.SearchText" />
                    <i class="bx bx-search fs-4 lh-0 me-2" type="submit"></i>
                </div>
            }
            <!-- /Search -->
        </div>

        <div class="table-responsive text-nowrap">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>#</th>
                        <th>Mã đơn hàng</th>
                        <th>Tên Khách hàng</th>
                        <th>Phone</th>
                        <th>Tiền</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td>@item.Code</td>
                                <td>@item.CustomerName</td>
                                <td>@item.Phone</td>
                                <td>@WebBanHangOnline.Common.Common.FormatNumber(item.TotalAmount, 0)</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @switch (item.Status)
                                        {
                                            case 1:
                                                @:<span class="badge bg-warning text-dark me-2">Chờ lấy hàng</span>
                                                break;
                                            case 2:
                                                @:<span class="badge bg-success me-2">Đã giao</span>
                                                break;
                                            case 3:
                                                @:<span class="badge bg-danger me-2">Đã hủy</span>
                                                break;
                                            case 4:
                                                @:<span class="badge bg-secondary me-2">Trả hàng / Hoàn tiền</span>
                                                break;
                                        }

                                        <button class="btn btn-sm btn-outline-primary btnEditStatus"
                                                data-id="@item.Id" data-status="@item.Status">
                                            <i class="bx bx-edit-alt"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-primary btnDelete"
                                                data-id="@item.Id">
                                            <i class="bx bx-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>

                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
            <div class="modal fade" id="modalEditStatus" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Cập nhật trạng thái đơn hàng</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" id="orderId" />

                            <div class="form-group mb-3">
                                <label for="statusSelect">Trạng thái mới</label>
                                <select class="form-control" id="statusSelect">
                                    <option value="1">Chờ lấy hàng</option>
                                    <option value="2">Đã giao</option>
                                    <option value="3">Đã hủy</option>
                                    <option value="4">Trả hàng / Hoàn tiền</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            <button type="button" class="btn btn-primary" id="btnSaveStatus">Lưu thay đổi</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ Borderless Table -->

</div>
<!-- / Content -->

<div id="dialog">
    <iframe id="myIframe" style="border: 0; width: 100%; height: 100%;"></iframe>
</div>
@section scripts{
    <link href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {

            // Autocomplete tìm kiếm
            $("#searchText").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/Admin/Order/GetSuggestions',
                        data: { term: request.term },
                        success: function (data) {
                            response(data);
                        }
                    });
                },
                minLength: 2,
            });

            // Chọn tất cả
            $('body').on('change', '#SelectAll', function () {
                $('.cbkItem').prop('checked', this.checked);
            });

            // Xóa nhiều
            $('body').on('click', '.BtnDeleteAll', function (e) {
                e.preventDefault();
                let selectedIds = [];
                $('.cbkItem:checked').each(function () {
                    selectedIds.push($(this).val());
                });

                if (selectedIds.length === 0) {
                    Swal.fire('Thông báo', 'Vui lòng chọn ít nhất một bản ghi để xóa.', 'info');
                    return;
                }

                Swal.fire({
                    title: 'Bạn có chắc muốn xóa các bản ghi này?',
                    text: 'Thao tác này không thể hoàn tác!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Admin/Order/DeleteAll',
                            type: 'POST',
                            data: { ids: selectedIds.join(',') },
                            success: function (rs) {
                                if (rs.success) {
                                    Swal.fire('Đã xóa!', 'Các bản ghi đã được xóa thành công.', 'success').then(() => location.reload());
                                } else {
                                    Swal.fire('Lỗi!', rs.message || 'Không thể xóa các bản ghi này.', 'error');
                                }
                            },
                            error: function () {
                                Swal.fire('Lỗi!', 'Đã xảy ra lỗi trong quá trình xóa.', 'error');
                            }
                        });
                    }
                });
            });

            // Xóa một đơn hàng
            $('body').on('click', '.btnDelete', function () {
                const id = $(this).data("id");

                Swal.fire({
                    title: 'Bạn có muốn xóa bản ghi này?',
                    text: 'Thao tác này không thể hoàn tác!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Admin/Order/Delete',
                            type: 'POST',
                            data: { id: id },
                            success: function (rs) {
                                if (rs.success) {
                                    Swal.fire('Đã xóa!', 'Bản ghi đã được xóa.', 'success');
                                    $('#trow_' + id).fadeOut(300, function () {
                                        $(this).remove();
                                    });
                                } else {
                                    Swal.fire('Lỗi!', 'Không thể xóa bản ghi này.', 'error');
                                }
                            },
                            error: function () {
                                Swal.fire('Lỗi!', 'Đã xảy ra lỗi trong quá trình xóa.', 'error');
                            }
                        });
                    }
                });
            });

            // Mở modal chỉnh trạng thái
            $('body').on('click', '.btnEditStatus', function () {
                var id = $(this).data('id');
                var status = $(this).data('status');
                $('#orderId').val(id);
                $('#statusSelect').val(status);
                $('#modalEditStatus').modal('show');
            });

            // Lưu trạng thái
            $('#btnSaveStatus').on('click', function () {
                var id = $('#orderId').val();
                var trangthai = $('#statusSelect').val();

                $.ajax({
                    url: '/Admin/Order/UpdateTT',
                    type: 'POST',
                    data: { id: id, trangthai: trangthai },
                    success: function (res) {
                        if (res.success) {
                            $('#modalEditStatus').modal('hide');//Đóng modal trước khi hiển thị SweetAlert
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công!',
                                text: res.message,
                                timer: 1500,
                                showConfirmButton: false
                            }).then(() => location.reload());
                        } else {
                            Swal.fire('Lỗi', res.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Lỗi', 'Không thể cập nhật trạng thái', 'error');
                    }
                });
            });
        });
    </script>
}