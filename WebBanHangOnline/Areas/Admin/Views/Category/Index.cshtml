@model IEnumerable<WebBanHangOnline.Models.EF.Category>
@{ ViewBag.Title = "Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh sách <small>danh mục</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a href="/Admin/category/Add"><i class="fa fa-plus-square"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Tên danh mục</th>
                                                <th>Thứ tự xuất hiện</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null && Model.Any())
                                            {
                                                var i = 1;
                                                foreach (var item in Model)
                                                {
                                <tr id="trow_@item.Id">
                                    <td>@i</td>
                                    <td>@item.Title</td>
                                    <td>@item.Position</td>
                                    <td>
                                        <a href="/admin/category/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                        <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                    </td>
                                </tr>i++;
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- Thêm thư viện SweetAlert2 -->
    <script>
        $(document).ready(function () {
            $('.btnDelete').click(function () {
                var user = $(this).data('user');
                var id = $(this).data('id');

                // Hiển thị popup xác nhận xóa
                Swal.fire({
                    title: 'Bạn có chắc chắn muốn xóa?',
                    text: `Bạn đang xóa category: ${user}. Thao tác này không thể hoàn tác!`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Nếu người dùng nhấn "Xóa", gửi AJAX request
                        $.ajax({
                            url: '/admin/category/DeleteAccount',
                            type: 'POST',
                            data: { user: user, id: id },
                            success: function (res) {
                                if (res.Success) {
                                    Swal.fire(
                                        'Đã xóa!',
                                        `Category ${user} đã được xóa thành công.`,
                                        'success'
                                    );
                                    $('#trow_' + id).remove(); // Xóa dòng trong bảng
                                } else {
                                    Swal.fire(
                                        'Lỗi!',
                                        'Không thể xóa Category này. Vui lòng thử lại.',
                                        'error'
                                    );
                                }
                            },
                            error: function () {
                                Swal.fire(
                                    'Lỗi!',
                                    'Đã xảy ra lỗi trong quá trình xóa. Vui lòng thử lại.',
                                    'error'
                                );
                            }
                        });
                    }
                });
            });
        });
    </script>
}