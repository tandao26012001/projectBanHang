
@{
    ViewBag.Title = "Đặt hàng thành công";
    string orderCode = ViewBag.OrderCode as string; // Mã đơn được truyền từ controller
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">@ViewBag.Title</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="/trang-chu">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/gio-hang">Giỏ hàng</a></li>
        <li class="breadcrumb-item active text-white">@ViewBag.Title</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Checkout success Start -->
<div class="container-fluid py-5">
    <div class="container py-5 text-center">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <i class="bi bi-check-circle display-1 text-success"></i>
                <h5>🎉 Cảm ơn bạn đã đặt hàng!</h5>
                <p class="mb-4">Đơn hàng của bạn đã được ghi nhận thành công. Mã đơn hàng của bạn là: <strong>@orderCode</strong></p>
                <p class="mb-4">Chúng tôi sẽ liên hệ với bạn sớm để xác nhận đơn hàng.</p>
                <a class="btn border-secondary rounded-pill py-3 px-5" href="/trang-chu">Trở về trang chủ</a>
            </div>
        </div>
    </div>
</div>
<!-- Checkout success End -->