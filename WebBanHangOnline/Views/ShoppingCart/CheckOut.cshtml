@model IEnumerable<WebBanHangOnline.Models.ShoppingCartItem>

@{
    ViewBag.Title = "Thanh toán";
    var totalItems = Model?.Sum(x => x.Quantity) ?? 0;
    var totalAmount = Model?.Sum(x => x.Quantity * x.Product.Price) ?? 0;
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">@ViewBag.Title</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="/trang-chu">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/gio-hang">Giỏ hàng</a></li>
        <li class="breadcrumb-item active text-white">@ViewBag.Title</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Checkout Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Địa chỉ nhận hàng</h1>
        <form action="/ShoppingCart/PlaceOrder" method="post">
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <div class="row">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Họ<sup>*</sup></label>
                                <input type="text" name="FirstName" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Tên<sup>*</sup></label>
                                <input type="text" name="LastName" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3">Số điện thoại<sup>*</sup></label>
                        <input type="tel" name="Phone" class="form-control" required>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3">Địa chỉ Email<sup>*</sup></label>
                        <input type="email" name="Email" class="form-control" required>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3">Ghi chú</label>
                        <textarea name="Note" class="form-control" rows="5" placeholder="Ghi chú đơn hàng (Tùy chọn)"></textarea>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6 col-xl-5">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Ảnh</th>
                                        <th>Sản phẩm</th>
                                        <th>Giá</th>
                                        <th>SL</th>
                                        <th>Tổng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <img src="@item.Product.Image" style="width: 70px; height: 70px" class="rounded-circle" />
                                            </td>
                                            <td>@item.Product.Title</td>
                                            <td>@string.Format("{0:N0} đ", item.Product.Price)</td>
                                            <td>@item.Quantity</td>
                                            <td>@string.Format("{0:N0} đ", item.Product.Price * item.Quantity)</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="3">Tổng sản phẩm:</td>
                                        <td colspan="2">@totalItems</td>
                                    </tr>
                                    <tr>
                                        <td colspan="3">Tổng thanh toán:</td>
                                        <td colspan="2"><strong>@string.Format("{0:N0} đ", totalAmount)</strong></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center pt-4">
                            <button type="submit" class="btn btn-primary py-3 px-4 text-uppercase w-100">Đặt hàng</button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">Không có sản phẩm nào trong giỏ hàng.</div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Checkout Page End -->
