@model WebBanHangOnline.Models.EF.News
@{
    ViewBag.Title = Model.SeoTitle;
    ViewBag.SeoTitle = Model.SeoTitle;
    ViewBag.SeoKeyWord = Model.SeoKeywords;
}
<link href="~/Content/servers/css/rutgonnoidung.css" rel="stylesheet" />
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">@ViewBag.Title</h1>
</div>
<!-- Single Page Header End -->
<div class="container news_section_container mt-4 mb-5">
    <div class="row">
        <!-- Cột trái: Nội dung bài viết -->
        <div class="col-md-8 col-sm-12">
            @if (Model != null)
            {
                <div class="news-detail-content mt-3">
                    @Html.Raw(Model.Detail)
                </div>
            }
        </div>

        <!-- Cột phải: Tin tức khác -->
        <div class="col-md-4 col-sm-12">
            <div class="sidebar-box">
                <h3 class="sidebar-title">Tin tức khác</h3>

                @foreach (var news in ViewBag.RelatedNews as List<WebBanHangOnline.Models.EF.News>)
                {
                    <div class="sidebar-item">
                        <a href="@Url.Action("Detail","News", new { id = news.Id })" class="thumb-link">
                            <img src="@news.Image" alt="@news.Title" class="sidebar-thumb" />
                        </a>

                        <div class="sidebar-content">
                            <a href="@Url.Action("Detail","News", new { id = news.Id })" class="news-link">
                                @news.Title
                            </a>
                            <span class="news-date">@news.CreatedDate.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
