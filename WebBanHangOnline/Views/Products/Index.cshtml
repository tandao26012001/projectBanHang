@model IEnumerable<WebBanHangOnline.Models.EF.Product>
@{
    ViewBag.Title = "Danh sách sản phẩm";
}
<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <h1 style="text-align:center">@ViewBag.Title</h1>
        </div>
    </div>
</div>
<!-- End Hero Section -->
<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    var strImge = "";
                    var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
                    if (img != null)
                    {
                        strImge = img.ImageUrl;
                    }
                    var wishlist = item.Wishlists.FirstOrDefault(x => x.UserName == User.Identity.Name);
                    var isWishlist = false;
                    if (wishlist != null)
                    {
                        isWishlist = true;
                    }
                    <!-- Start Column 1 -->
                    <div class="col-12 col-md-4 col-lg-3 mb-5">
                        <a class="product-item" href="#">
                            <img src="@strImge" class="img-fluid product-thumbnail" title="@item.Title">
                            <h3 class="product-title">@item.Title</h3>
                            @if (item.PriceSale > 0)
                            {
                                <strong class="product_price">
                                    @WebBanHangOnline.Common.Common.FormatNumber(item.PriceSale, 0) đ
                                    <span class="old-price ms-2 text-muted text-decoration-line-through">
                                        @WebBanHangOnline.Common.Common.FormatNumber(item.Price, 0) đ
                                    </span>
                                </strong>
                            }
                            else
                            {
                                <strong class="product_price">@WebBanHangOnline.Common.Common.FormatNumber(item.Price, 0) đ</strong>
                            }
                        <div class="d-flex justify-content-between gap-2 mt-2">
                            <a href="javascript:;" class="btn btn-outline-light btn-sm d-flex align-items-center justify-content-center btnAddToCart flex-fill" data-id="@item.Id">
                                <i class="fa fa-cart-plus me-1"></i> Thêm vào giỏ
                            </a>
                            <a href="javascript:;" class="btn btn-outline-danger btn-sm d-flex align-items-center justify-content-center btnAddToWishlist flex-fill" data-id="@item.Id">
                                <i class="fa fa-heart me-1"></i> Yêu thích
                            </a>
                        </div>
                        </a>
                    </div>
                    <!-- End Column 1 -->
                }
            }
        </div>
    </div>
</div>